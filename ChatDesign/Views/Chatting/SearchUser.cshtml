@model IEnumerable<API.Models.User>

@{
    ViewData["Title"] = "SearchUser";
}

<h1>SearchUser</h1>

<h2>Escoge alguien para agregar</h2>
<div style="text-align:right">@Html.ActionLink("Regresar", "Index")</div>
<br />
<ul class="list-group">
    @foreach (var item in Model)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            @Html.DisplayFor(modelItem => item.Username)
            <span>@Html.ActionLink("Agregar contacto", "Chat", new { receiver = item.Username })</span>
        </li>
}
</ul>